<div class = 'list-page'>
  <div class = 'list-page-main'>
    <div class = "new-movie">
      <h2>Add a movie for <%= @list.name %></h2>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class = 'right'>
      <div class = "square square-1"></div>
      <div class = "square square-2"> <%= link_to 'Back to the lists', lists_path %></div>
    </div>
  </div>
  <div class = 'list-page-bottom'>
    <p><%= @list.name.upcase %></p>
  </div>
</div>
